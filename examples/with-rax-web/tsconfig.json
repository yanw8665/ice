{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "module": "esNext",
    "target": "es2015",
    "outDir": "build",
    "jsx": "preserve",
    "jsxFactory": "createElement",
    "moduleResolution": "node",
    "sourceMap": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "raxjs": [".rax/index.ts"]
    }
  },
  "include": ["src/*", ".rax"],
  "exclude": ["node_modules", "build", "public"]
}
